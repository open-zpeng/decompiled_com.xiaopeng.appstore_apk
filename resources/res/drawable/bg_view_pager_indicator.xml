<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="oval">
            <solid android:color="@color/color_indicator_normal"/>
            <size android:height="@dimen/indicator_size" android:width="@dimen/indicator_size"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/color_indicator_selected"/>
            <size android:height="@dimen/indicator_size" android:width="@dimen/indicator_size"/>
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<com.xiaopeng.xui.widget.XFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xiaopeng.xui.widget.XRelativeLayout android:layout_gravity="end|top" android:id="@+id/btn_alipay_authorize" android:background="@drawable/alipay_authorize_shape" android:visibility="gone" android:layout_width="@dimen/btn_alipay_authorize_width" android:layout_height="@dimen/btn_alipay_authorize_height" android:layout_marginTop="@dimen/btn_alipay_authorize_top" android:layout_marginRight="@dimen/btn_alipay_authorize_right">
